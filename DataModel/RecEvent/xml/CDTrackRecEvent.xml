<?xml version = "1.0" encoding = "UTF-8" ?>
<!DOCTYPE xdd SYSTEM "xdd.dtd">

<xdd>
    <package name = "RecEvent">

        <import name="Event/EventObject"/>
        <import name="Event/RecTrack"/>

        <class name = "CDTrackRecEvent"
            author = "ZHANG Kun"
            desc = "Reconstruction Event Class ">

            <base name = "EventObject"/>

            <attribute
                name="cdTracks"
                setMeth="FALSE"
                desc="The Cd tracks in this event"
                type="std::vector&lt;JM::RecTrack*&gt;"/>

            <destructor desc = "destructor">
                <code>
                        std::vector&lt;RecTrack*&gt;::const_iterator it = m_cdTracks.begin();
                        std::vector&lt;RecTrack*&gt;::const_iterator end = m_cdTracks.end();
                        while(it!=end){
                            if(*it) delete  (*it);
                            it++;
                        }
                        m_cdTracks.clear();
                </code>
            </destructor>

            <method
                name="getTrack"
                desc="Get a Cd track via index"
                argList="int index"
                const="TRUE"
                type="const JM::RecTrack *">
                <code>
                    return m_cdTracks.at(index);
                </code>
            </method>

            <method
                name="addTrack"
                desc="Add a Cd track to this event"
                argList="JM::RecTrack* track"
                type="void">
                <code>
                    m_cdTracks.push_back(track);
                </code>
            </method>

        </class>
    </package>
</xdd>

