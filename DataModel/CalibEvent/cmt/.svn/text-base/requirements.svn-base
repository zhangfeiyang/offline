package CalibEvent

branches cmt src xml Event

use XmlObjDesc v* -no_auto_imports
use SniperKernel v*
use ROOT v* Externals
use CLHEP v* Externals
use BaseEvent v* DataModel
use EDMUtil v* DataModel


macro_append CalibEvent_cintflags "-I$(CMTINSTALLAREA)/include"
macro_append CalibHeader_cintflags "-I$(CMTINSTALLAREA)/include"
macro_append TTCalibEvent_cintflags "-I$(CMTINSTALLAREA)/include"

macro_append XODflags " -n JM "

apply_pattern xod_headers files=../xml/*.xml
apply_pattern install_more_includes more=Event
apply_pattern cint_dictionary files=../Event/*.h

apply_pattern xod_srcs files=../Event/*.h

include_dirs $(CALIBEVENTROOT)/Event
library CalibEvent *.cc
apply_pattern linker_library library=CalibEvent
